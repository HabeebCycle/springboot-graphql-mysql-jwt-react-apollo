# The Root Query for the application
type Query {
  book(id: ID!) : Book,
  author(id: ID!) : Author,
  books : [Book],
  authors : [Author]
}

# The Root Mutation for the application
type Mutation {
  addAuthor(name: String!, age: Int) : Author,
  addBook(name: String!, genre: String, author: ID!): Book
}